{
  //beli ip adreslerine belli başlı kurallar koyabiliyoruz
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1",
        "Rules": [
          {
            "Endpoint": "*:/api/product", // * tüm hepsi için //GET, POST olarak ayrıca belirtilebilir
            "Period": "30s",
            "Limit": 20
          },
          {
            "Endpoint": "*:/api/product/*", // /* parametreli endpointler için
            "Period": "30s",
            "Limit": 5
          },
          {
            "Endpoint": "*:/api/product",
            "Period": "1h",
            "Limit": 1000
          },
          {
            "Endpoint": "*:/api/product",
            "Period": "1d",
            "Limit": 200
          },
          {
            "Endpoint": "*:/api/categories",
            "Period": "30s",
            "Limit": 50
          },
          {
            "Endpoint": "*:/api/categories",
            "Period": "1h",
            "Limit": 500
          },
          {
            "Endpoint": "*:/api/categories",
            "Period": "1d",
            "Limit": 5000
          }
        ]
      }
    ]
  },

  "IpRateLimiting": {
    "QuotaExceededResponse": {
      "Content": "{{\"mesaj\":\"İstek limiti aşıldı \", \"Detay\":  \"İzin verilen istek sayısı {1} başına {0} istektir. {2} saniye sonra tekrar deneyiniz.\"  }}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false, //dakikada 60 request yapılabilir, saatte 1000 request yapılabilir (örn 1 dakikada 61. istek geldi bu istek sayılacak mı sayılmayacak mı)
    "ClientIdHeader": "X-ClientId",
    "ClientWhitelist": [ "dev-id-1", "dev-id-2" ],
    "RealIpHeader": "X-Real-IP",
    "HttpStatusCode": 429, //.ok fazla istek yapıldıysa dönen isteğin kodu
    "IpWhitelist": [ "127.0.0.1" ], //sınırlama koyulmasını istemediğim ip adresleri tnaımlanıyor [ip4,ip6,0-24 arası ->"192.168.0.0/24"]
    "EndpointWhitelist": [ "put:/api/product" ], //sınırlamalardan muaf olacak actionları tanımlıyoruz
    "GeneralRules": [
      {
        "Endpoint": "*:/api/product", // * tüm hepsi için //GET, POST olarak ayrıca belirtilebilir
        "Period": "30s",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/product",
        "Period": "1h",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/product",
        "Period": "1d",
        "Limit": 1000
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "30s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1h",
        "Limit": 50
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1d",
        "Limit": 500
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
